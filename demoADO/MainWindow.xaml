<Window x:Class="demoADO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demoADO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="126" Margin="67,42,0,0" ItemsSource="{Binding}" VerticalAlignment="Top" Width="225" Name="MyGridTable"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="605,123,0,0" TextWrapping="Wrap" Text="Iduseless" VerticalAlignment="Top" Width="120" Name="Txt1" TextChanged="Txt1_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="409,84,0,0" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="120" Name="Txt2" TextChanged="Txt2_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="409,123,0,0" TextWrapping="Wrap" Text="name" VerticalAlignment="Top" Width="120" Name="Txt3"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="375,172,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="625,157,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
